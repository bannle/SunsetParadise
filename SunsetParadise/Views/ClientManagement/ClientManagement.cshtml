@model SunsetParadise.Models.ClientManagementViewModel

@{
    ViewBag.Title = "Gestión de Clientes";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="RoomManagement" asp-action="RoomManagement">SunsetParadise</a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="RoomManagement" asp-action="RoomManagement">Habitaciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="ClientManagement" asp-action="ClientManagement">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="ReservationManagement" asp-action="ReservationManagement">Reservas</a>
                    </li>
                </ul>
                <form asp-controller="Home" asp-action="Logout" method="post" class="d-flex">
                    <button type="submit" class="btn btn-outline-danger">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <h2>Gestión de Clientes</h2>

    <!-- Botón para abrir modal -->
    <div class="mb-3">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addClientModal">Registrar Cliente</button>
    </div>

    <!-- Listado de clientes -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>DUI</th>
                <th>Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.DUI</td>
                    <td>@client.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Agregar Cliente -->
<div class="modal fade" id="addClientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="ClientManagement" asp-action="AddClient" method="post">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewClient.Name)
                        @Html.TextBoxFor(m => m.NewClient.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewClient.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewClient.DUI)
                        @Html.TextBoxFor(m => m.NewClient.DUI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewClient.DUI, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewClient.Phone)
                        @Html.TextBoxFor(m => m.NewClient.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewClient.Phone, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>